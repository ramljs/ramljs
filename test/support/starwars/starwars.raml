#%RAML 1.0
title: Starwars example API
description: Starwars example API
documentation:
 - title: Home
   content: !include api-doc.markdown
version: 1
protocols: [https]
baseUri: https://api.starwars.com/{version}

uses:
  Starwars: library/starwars-types.js

annotationTypes:
  experimental: boolean

securitySchemes:
  oauth_1_0:
    description: OAuth 1.0 is still supported
    type: OAuth 1.0
    settings:
      requestTokenUri: https://api.foobarbaz.com/1/oauth/request_token
      authorizationUri: https://www.foobarbaz.com/1/oauth/authorize
      tokenCredentialsUri: https://api.foobarbaz.com/1/oauth/access_token

resourceTypes:
  postable:
    post:
      queryParameters:
        csrf:
          type: string

traits:
  traceable:
    headers:
      X-Tracker:
        description: A code to track API calls end to end
        pattern: ^\w{16}$
        example: abcdefghijklmnop

types:
  lat-long: # lat & long required; mutually exclusive with location
    properties:
      lat: number
      long: number
  loc: # location required; mutually exclusive with lat & long
    properties:
      location:
  paging: # each is optional, not exclusive with anything
    properties:
      start?: number
      page-size?: number

  !include_all ./types/**/*

securedBy: [oauth_1_0]

/:
  get:
    description: Api root

!resources ./api
